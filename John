        <p>Gusto kita, pwede ba manligaw?</p> <div class="buttons">
            <button id="yesBtn" onclick="success()">Yes</button>
            <button id="noBtn" onmouseover="moveButton()" onclick="moveButton()">No</button>
        </div>
    </div>

    <script>
        function moveButton() {
            var x = Math.random() * (window.innerWidth - 100);
            var y = Math.random() * (window.innerHeight - 100);
            
            var btn = document.getElementById('noBtn');
            btn.style.position = 'absolute';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }

        function success() {
            var content = document.getElementById('content');
            
            // Ito ang lalabas pag nag YES sila
            content.innerHTML = `
                <h1 style="font-size: 4rem; color: #d81b60;">Yieee! Sabi mo yan ah! ‚ù§Ô∏è</h1>
                <img src="https://media.giphy.com/media/T86i6yDyOYz7J6dPhf/giphy.gif" style="width: 300px; border-radius: 20px;">
                <p>See you soon! üòò</p>
            `;
            
            // Confetti effect (optional visuals)
            document.body.style.backgroundColor = "#ffc1e3";
        }
    </script>
